﻿@using website.Models.sınıflar;
@model List<about>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_TasarmLayout.cshtml";
}



<!DOCTYPE html>
<html class="wide wow-animation" lang="utf-8">
<body>

    <section class="breadcrumbs-custom">
        <div class="breadcrumbs-custom-main context-dark">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-xl-9">
                        <h3 class="breadcrumbs-custom-title">Sağlık Turizmi Ekosistemi</h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="breadcrumbs-custom-aside">
            <div class="container">
                <ul class="breadcrumbs-custom-path">
                    <li><a href="/Anasayfa/Index">Ana Sayfa</a></li>
                    <li class="active">Bilgi</li>
                </ul>
            </div>
        </div>
    </section>
    <!-- Who we Are-->
    @foreach (var x in Model)
    {
        <section class="section">
            <div class="container">
                <div class="row align-items-end justify-content-center">
                    <div class="col-md-10 col-lg-7">
                        <div class="section-md">
                            <h3>@x.Baslik</h3>


                            <p>
                                @Html.Raw(@x.Aciklama)


                            </p>


                            <!-- Quote Light-->
                            <blockquote class="quote-light quote-light_1 wow fadeInRightSmall ">
                                <div class="quote-light-mark linearicons-quote-open"></div>
                                <div class="quote-light-text">
                                    <label class="col-form-label" data-bs-toggle="modal" data-bs-target="#modal-@x.ID" id="nedenbz" style="font-weight: 700;">@x.quote</label>
                                    <div class="modal fade" id="modal-@x.ID">
                                        <div class="modal-dialog modal-lg">
                                            <div class="modal-content">
                                                <div class="modal-header">


                                                    <h5 class="modal-title">@x.Baslik</h5>

                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <form>

                                                        <p style="font-size:18px;">
                                                            @Html.Raw(@x.modal_madde)
                                                        </p>

                                                        <hr>
                                                        <p style="font-weight: 900; color: black; font-size:17px;">Healthassis ekosistemine kayıtlarda Complication Insure   kullanıcılarına öncelik verilecektir.    </p>

                                                    </form>
                                                </div>
                                                <div class="modal-footer">
                                                    <a class="button button-lg button-primary button-shadow button-winona" style=" height: 20px;" href="/Buy/Index" wow-delay=".2s">Ön Sipariş Ver</a>

                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </blockquote>

                        </div>
                    </div>
                    <div class="col-md-10 col-lg-5 text-center">


                        <img src="@x.FotoUrl" alt="" width="379" height="570" />

                    </div>
                </div>
            </div>
        </section>
        <!-- About-->
        <section class="section section-md bg-gray-100">
            <div class="container">

            </div>
        </section>
    }
    <!-- Welcome to Team-->
    <!-- People Ready to Change the World-->
    <!-- Page Footer-->

</body>
</html>


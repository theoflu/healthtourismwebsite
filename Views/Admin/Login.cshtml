
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="">
<head>
    <title>Admin Girişi</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/insre/admn/login/images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/insre/admn/login/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/insre/admn/login/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/insre/admn/login/fonts/Linearicons-Free-v1.0.0/icon-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/insre/admn/login/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/insre/admn/login/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/insre/admn/login/vendor/animsition/css/animsition.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/insre/admn/login/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/insre/admn/login/vendor/daterangepicker/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/insre/admn/login/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/insre/admn/login/css/main.css">
    <!--===============================================================================================-->
    <link href="~/insre/admn/login/css/util.css" rel="stylesheet" />
</head>
<body>

    <div class="limiter">
        <div class="container-login100" style="background-image: url('/insre/admn/login/images/bg-0111.jpg');">
            <div class="wrap-login100 p-t-30 p-b-50">
                <span class="login100-form-title p-b-41">
                    Admin Giriş
                </span>
                @using (Html.BeginForm("Login", "Admin", FormMethod.Post ,new { @class="login100-form validate-form p-b-33 p-t-5"})) {

                    <div class="wrap-input100 validate-input" data-validate="Kullanıcı Adını Giriniz">
                     <input class="input100" type="text" name="Kullanici" placeholder="Kullanıcı Adı ">
                        <span class="focus-input100" data-placeholder="&#xe82a;"></span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Şifreyi Giriniz">
                        <input class="input100" type="password" name="sifre" placeholder="Şifre">
                        <span class="focus-input100" data-placeholder="&#xe80f;"></span>
                    </div>
                    <div class="container-login100-form-btn m-t-32">
                        <button class="login100-form-btn" type="submit">
                            Giriş Yap
                        </button>
                    </div>

                }
            </div>
        </div>
    </div>


    <div id="dropDownSelect1"></div>

    <!--===============================================================================================-->
    <script src="~/insre/admn/login/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/insre/admn/login/vendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/insre/admn/login/vendor/bootstrap/js/popper.js"></script>
    <script src="~/insre/admn/login/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/insre/admn/login/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/insre/admn/login/vendor/daterangepicker/moment.min.js"></script>
    <script src="~/insre/admn/login/vendor/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script src="~/insre/admn/login/vendor/countdowntime/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script src="~/insre/admn/login/js/main.js"></script>

</body>
</html>